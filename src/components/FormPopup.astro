<!-- Popup Container -->
<div id="popup" class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center hidden z-50">
    <div class="relative w-full max-w-3xl">
      <!-- Pulsante di chiusura -->
      <button id="close-popup" class="absolute top-2 right-2 text-white text-2xl z-30">X</button>
  
      <!-- Form -->
      <form id="step-form" class="form-step-wrapper">
        <!-- Step 1 -->
        <div class="form-step step-1">
          <h3>Step 1</h3>
          <input type="text" placeholder="Nome" name="name" />
          <button type="button" class="next-btn">Avanti</button>
        </div>
  
        <!-- Step 2 -->
        <div class="form-step step-2 hidden">
          <h3>Step 2</h3>
          <input type="email" placeholder="Email" name="email" />
          <button type="button" class="prev-btn">Indietro</button>
          <button type="button" class="next-btn">Avanti</button>
        </div>
  
        <!-- Step 3 -->
        <div class="form-step step-3 hidden">
          <h3>Step 3</h3>
          <textarea placeholder="Messaggio" name="message"></textarea>
          <button type="button" class="prev-btn">Indietro</button>
          <button type="submit">Invia</button>
        </div>
      </form>
    </div>
  </div>
  

  
  