---
import Logo from '../assets/logo.svg?url';
import LogoWhite from '../assets/logo-white.svg?url';
let isMenuOpen = false;
---

<header class="flex justify-center w-full mt-7 px-6">
    <div class="container flex flex-row w-full items-center justify-between z-50">
        <img src={Logo} alt={Logo} class="logo w-5/12 sm:w-4/12 md:w-4/12 lg:w-2/12 duration-300"/>
        <nav class="flex flex-1 justify-end items-center hidden lg:flex">
            <ul class="flex flex-row">
                <li class="text-base font-medium px-4 text-gray-800">Impermeabilizzazione</li>
                <li class="text-base font-medium px-4 text-gray-800">Certificazione</li>
                <li class="text-base font-medium px-4 text-gray-800">Lavori</li>
                <li class="text-base font-medium pl-4 text-gray-800">Dove Operiamo</li>
            </ul>
            <button class="sm:hidden xl:block bg-green-500 hover:bg-green-700 leading-0 py-6 px-6 rounded-full border-0 text-gray-50 ml-8">RICHIEDI PREVENTIVO GRATUITO</button>
        </nav>

        <!-- Menu Toggle -->
        <button class="menu-trigger lg:hidden relative w-8 h-[2px] block">
                <!-- Prima barra (before) -->
                <span class="absolute top-[-6px] left-0 w-full h-[2px] bg-gray-600 will-change-transform will-change-opacty duration-300"></span>

                <!-- Linea principale -->
                <span class="absolute top-0 left-0 w-full h-[2px] bg-gray-600 will-change-transform will-change-opacty duration-300"></span>
            
                
                <!-- Seconda barra (after) -->
                <span class="absolute bottom-[-6px] left-0 w-full h-[2px] bg-gray-600 will-change-transform will-change-opacty duration-300"></span>
        </button>
    </div>
</header>
<nav class="menu-mobile menu-mobile absolute opacity-0 invisible transition-opacity duration-300 ease-in-out -z-10 top-0 w-full h-screen">
    <ul class="menu-items -z-10 absolute mx-6 top-50">
        <li class="text-lg font-medium text-gray-800 mb-6">Impermeabilizzazione</li>
        <li class="text-lg font-medium text-gray-800 mb-6">Certificazione</li>
        <li class="text-lg font-medium text-gray-800 mb-6">Lavori</li>
        <li class="text-lg font-medium text-gray-800 mb-6">Dove Operiamo</li>
    </ul>
</nav>
